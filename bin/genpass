#!/usr/bin/env zsh
# Generate a cryptographically inadequate(!) password for those
# times when pwgen isn't available or security doesn't matter.
# Usage: genpass 10

function main() {
    local len="${1:-20}"

    dd if=/dev/urandom count=1 2>/dev/null |\
        tr -cd 'A-Za-z0-9!@#$%^&*()_+' | cut "-c-${len}"
}

main "$@"
