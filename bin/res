#!/usr/bin/env zsh

pick <<- EOF | awk '{ $1 = ""; sub(/^\s+/, "", $0); print $0 }' | xargs xrandr
	Auto        --auto
	Desktop     --auto --output eDP1 --off
	Notebook    --auto --output eDP1 --scale 0.4x0.4 --rotate right
	Present     --auto --output eDP1 --scale-from 1024x768
	Reset       --auto --output eDP1 --transform none
	Work        --auto --output DP1 --rotate left --output eDP1 --off
EOF
