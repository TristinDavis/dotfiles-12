#!/usr/bin/env sh
# Quickly create and edit a new shell script, already marked as executable
#
# Usage:
#   new-sh foo.sh
#   new-sh foo.py python

script="${1:?Script name required.}"
lang=${2:-sh}

printf "#!/usr/bin/env $lang\n\n\n" > "$script"
chmod +x "$script"

${EDITOR:-vi} -c ':3' "$script"
